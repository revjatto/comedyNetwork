<!DOCTYPE html>
<html>
  <head>
    <title>ComedyNetwork</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="nav">
      <div class="container">
        <ul>
        <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Comedy', comedies_path %></li>
           <% if current_user %>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-knight" %></li>
            <% else %>
            <li><%= link_to "Register", new_user_registration_path, class: "glyphicon glyphicon-log-in" %></li> 
            <li><%= link_to "SignIn", new_user_session_path, class: "glyphicon glyphicon-user" %></li>
              <% end %>
               <li class="glyphicon glyphicon-user">Hello:<%= if user_signed_in? then current_user.email end %></li>
        </ul>
      </div>
    </div>
    <br>
    <div class="container">
  <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>

    </div>
  </body>
</html>
